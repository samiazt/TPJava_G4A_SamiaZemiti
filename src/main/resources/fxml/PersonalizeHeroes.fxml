<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="pading1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/CreateHeroes.css" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.isep.SpecialController">
    <Label fx:id="nameLabel" alignment="CENTER" contentDisplay="CENTER" text="What is the name of the 1st hero?" textAlignment="CENTER" />
    <TextField fx:id="nameField" maxHeight="42.0" maxWidth="200.0" />
    <Label alignment="CENTER" contentDisplay="CENTER" text="What is his class?" textAlignment="CENTER" />
    <HBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="20.0">
        <ToggleButton fx:id="warriorClass" contentDisplay="CENTER" mnemonicParsing="false" onAction="#warriorClass" textAlignment="CENTER">
            <graphic>
                <VBox alignment="CENTER">
                    <ImageView fitHeight="200.0" fitWidth="160.0" nodeOrientation="INHERIT" preserveRatio="true">
                        <Image url="@../images/heroes/Warrior.png" />
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Warrior" textAlignment="CENTER" />
                </VBox>
            </graphic>
        </ToggleButton>
        <ToggleButton fx:id="hunterClass" contentDisplay="CENTER" mnemonicParsing="false" onAction="#hunterClass" textAlignment="CENTER">
             <graphic>
                 <VBox alignment="CENTER">
                     <ImageView fitHeight="200.0" fitWidth="150.0" nodeOrientation="INHERIT" preserveRatio="true">
                         <Image url="@../images/heroes/Hunter.png" />
                     </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Hunter" textAlignment="CENTER" />
                 </VBox>
            </graphic>
        </ToggleButton>
        <ToggleButton fx:id="mageClass" contentDisplay="CENTER" mnemonicParsing="false" onAction="#mageClass" textAlignment="CENTER">
            <graphic>
                <VBox alignment="CENTER">
                    <ImageView fitHeight="200.0" fitWidth="150.0" nodeOrientation="INHERIT" preserveRatio="true">
                        <Image url="@../images/heroes/Mage.png" />
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Mage" textAlignment="CENTER" />
                </VBox>
            </graphic>
        </ToggleButton>
        <ToggleButton fx:id="healerClass" contentDisplay="CENTER" mnemonicParsing="false" onAction="#healerClass" textAlignment="CENTER">
            <graphic>
                <VBox alignment="CENTER">
                    <ImageView fitHeight="200.0" fitWidth="150.0" nodeOrientation="INHERIT" preserveRatio="true">
                        <Image url="@../images/heroes/Healer.png" />
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Healer" textAlignment="CENTER" />
                </VBox>
            </graphic>
        </ToggleButton>
    </HBox>
    <HBox id="pading2" alignment="CENTER_RIGHT">
        <Button fx:id="confirm" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#confirm" prefHeight="25.0" prefWidth="160.0" text="Confirm" textAlignment="CENTER" />
    </HBox>
</VBox>
